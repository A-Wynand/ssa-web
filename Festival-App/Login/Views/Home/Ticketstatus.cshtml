@model IEnumerable<Festival.Models.Ticket>

@{
    ViewBag.Title = "Ticketstatus";
}

<h2>Ticketstatus</h2>

<div class="row">
    <div class="col-md-10">
        <table class="table">
            <tr>
                <th>Ticket Type
                </th>
                <th>Resterend aantal tickets
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.soort)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.aantal)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
