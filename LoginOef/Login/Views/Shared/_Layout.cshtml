<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Ultra musicfestival</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><img src="~/Content/images/logo.jpg"/></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Bands", "Bands", "Home")</li>
                            <li>@Html.ActionLink("Tickets", "Tickets", "Home")</li>
                            @if(User.IsInRole("User") || User.IsInRole("Admin")){
                                <li>@Html.ActionLink("Mijn tickets","BesteldeTickets","Home") </li>
                            }
                            @if(User.IsInRole("Admin")){
                                <li>@Html.ActionLink("Ticketstatus", "Ticketstatus", "Home")</li>
                            }
                            <li>@Html.ActionLink("Route - Contact", "Contact", "Home")</li>
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-right">
                    <p>&copy; Ultra Musicfestival @DateTime.Now.Year</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
