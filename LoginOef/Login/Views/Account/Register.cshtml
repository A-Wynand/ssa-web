@model Festival.Models.RegisterModel
@{
    ViewBag.Title = "Registeer";
}


<div class="row">
    <div class="col-md-10">
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
            <h2>Maak een nieuw account.</h2>
        </hgroup>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <fieldset>
                <legend>Registratie formulier</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.email)
                        @Html.TextBoxFor(m => m.email)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.vnaam)
                        @Html.TextBoxFor(m => m.vnaam)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.anaam)
                        @Html.TextBoxFor(m => m.anaam)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword)
                    </li>
                </ol>
                <input type="submit" value="Registeer" />
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
