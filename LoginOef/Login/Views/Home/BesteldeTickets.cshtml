@model IEnumerable<Festival.Models.Ticket>

@{
    ViewBag.Title = "Bestelde tickets";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-2">
        <h2>Overzicht</h2>
        <p>
            De hier getoonde tickets werden reeds door U besteld.
        </p>
    </div>
    <div class="col-md-10">
        <table class="table">
            <tr>
                <th>Soort
                </th>
                <th>Aantal
                </th>
                <th></th>
                <th>Prijs
                </th>
                <th></th>
            </tr>

            @{
                float total = 0; 
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.soort)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.aantal)
                    </td>
                    <td></td>
                    <td>€@Html.DisplayFor(modelItem => item.prijs)
                        @{total += item.prijs;}
                    </td>
                </tr>

            }
            <tr>
                <td>Totaalprijs:</td>
                <td></td>
                <td></td>
                <td>€@total</td>
            </tr>


        </table>
    </div>
</div>
